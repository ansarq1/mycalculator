<Button>
    font_size: '28dp'
    background_color: (20/255, 20/255, 20/255, 1)
<MyCalculator>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: '64dp'
            multiline: False
            input_filter: "int"
            size_hint_y: None
            height: '100dp'

        GridLayout:
            cols: 4
            rows: 5
#firstLine
            Button:
                text: "%"
                background_color: (64/255, 64/255, 64/255, 1)
            Button:
                text: "del"
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.delete()
            Button:
                id: clear
                text: "C"
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.clear()
            Button:
                text: "/"
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.operator("/")
#secondLine
            Button:
                text: "7"
                on_press: root.number_press(7)
            Button:
                text: "8"
                on_press: root.number_press(8)
            Button:
                text: "9"
                on_press: root.number_press(9)
            Button:
                text: "x"
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.operator("*")

#ThirdLine
            Button:
                text: "4"
                on_press: root.number_press(4)
            Button:
                text: "5"
                on_press: root.number_press(5)
            Button:
                text: "6"
                on_press: root.number_press(6)
            Button:
                text: "-"
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.operator("-")

#fourthLine
            Button:
                text: "1"
                on_press: root.number_press(1)
            Button:
                text: "2"
                on_press: root.number_press(2)
            Button:
                text: "3"
                on_press: root.number_press(3)
            Button:
                id: addition
                text: "+"
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.operator("+")

#fifthLIne
            Button:
                text: "+/-"
                on_press: root.sign()
            Button:
                text: "0"
                on_press: root.number_press(0)
            Button:
                text: "."
                on_press: root.decimal()
            Button:
                text: "="
                background_color: (64/255, 64/255, 64/255, 1)
                on_press: root.equals()
